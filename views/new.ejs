<%= layout("/layouts/boilerplate") %>

    <body>
        <h1>Create a new listing</h1>
        <br>
        <div class="row mt-3">
            <div class="col-8" offset-2>
                <form action="/listings" method="post" class="needs-validation" novalidate>

                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" name="title" placeholder="Enter title" class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea type="text" name="description" placeholder="Enter Description"
                            class="form-control" required></textarea>
                    </div>
                    <label for="image" class="form-label">Image</label>
                    <input type="text" name="image" placeholder="Enter Image URL" class="form-control">

                    <div class="row">
                        <div class="mb-3" col-md-4>
                            <label for="price" class="form-label">Price</label>
                            <input type="number" name="price" placeholder="Enter Price" class="form-control" required>
                        </div>


                        <div class="mb-3" col-md-8>
                            <label for="country" class="form-label">Country</label>
                            <input type="text" name="country" placeholder="Enter Country" class="form-control" required>
                        </div>
                    </div>


                    <div class="mb-3">
                        <label for="location">Location</label>
                        <input type="text" name="location" placeholder="Enter Location" class="form-control" required>
                    </div>

                    <br>
                    <button class="btn btn-dark add-btn">Submit</button>
                    <br>
                </form>
            </div>
        </div>
    </body>
    
